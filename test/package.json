{
	"private": true,
	"dependencies": {
		"@rollup/plugin-html": "^1.0.3",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@surma/rollup-plugin-off-main-thread": "^2.2.3",
		"@web/rollup-plugin-import-meta-assets": "^2.2.1",
		"get-port": "^7.0.0",
		"html-webpack-plugin": "^5.6.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.10.3",
		"puppeteer": "^21.6.1",
		"requirejs": "^2.3.6",
		"rollup": "^4.9.1",
		"serve-handler": "^6.1.5",
		"wasm-pack": "^0.12.1",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"targets": {
		"app": {
			"distDir": "pkg/parcel"
		}
	},
	"scripts": {
		"build:wasm": "wasm-pack build --target web --out-name test",
		"prebuild:bundler": "npm run build:wasm",
		"build:bundler:webpack": "webpack",
		"build:bundler:rollup": "rollup -c",
		"build:bundler:parcel": "parcel build index.html --dist-dir pkg/parcel --public-url .",
		"build:bundler": "run-p build:bundler:*",
		"build:no-bundler": "npm run build:wasm -- -- --features wasm-bindgen-rayon/no-bundler",
		"build": "run-s build:bundler build:no-bundler",
		"pretest": "npm run build",
		"test": "node run-tests.mjs"
	}
}
